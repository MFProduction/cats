<%= form_for(funeral) do |f| %>
  <div class="field form-group">
    <%= f.label :cat_name %>
    <%= f.text_field :cat_name, class: "form-control" %>
  </div>
  <h4><%= @date.strftime("Funeral Time: %B %d %Y at %l %P") %></h4>
  <dir class="hidden">
    <%= f.datetime_select :start_time, default: @date, class: "form-control" %>
  </dir>
  <div class="actions">
    <%= f.submit 'Book', class: 'btn btn-success' %>
  </div>
<% end %>
